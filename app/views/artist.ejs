		      <img src="/img/assets/albumArt/smith1.jpg" style="height: 200px;">
		   <!--  </a> -->
			    <div class="content">
			      <div class="header"> In The Lonely Hour</div>
<!-- 			      <div class="meta">
			        <p>{{ person.name }}</p>
			      </div> -->
			      <div class="description">
			        2014: <b>15 tracks</b>
			      </div>
			    </div>
		  </div>	
		  <div class="card">
		    <!-- <a href="http://{{ person.url }}" class="image" style="overflow:hidden;"> -->
		      <img src="/img/assets/albumArt/smith3.jpg" style="height: 200px;">
		   <!--  </a> -->
