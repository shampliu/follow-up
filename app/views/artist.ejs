		<div class="ui class three cards" >
	  
		</div>

		<div class="ui link three cards" >
	  
		</div> -->

		<!-- <p>Gracenote</p> -->
		<h2 class="ui header">
			<i class="calendar icon"></i>
		  <!-- <img src="/images/icons/plugin.png"> -->
		  <div class="content">
		    Upcoming Events
		    <div class="sub header">Follow up and see this person in other venues!</div>
		  </div>
		</h2>
		<div class="ui">
			<div class="ui list" ng-repeat="event in events.events.event | limitTo: 5" style="border-bottom: 1px solid whitesmoke; padding-bottom: 10px;">
				<div class="item">
				  <i class="info circle icon"></i>
				  <div class="content">
				    {{ event.title }}
				  </div>
				</div>
				<div class="item">
				  <i class="alarm outline icon"></i>
				  <div class="content">
				    {{ getDate(event.startDate) }}
				  </div>
				</div>
				<div class="item">
			    <i class="marker icon"></i>
			    <div class="content">
			      {{ event.venue.location.city }}, {{ event.venue.location.country }}
			    </div>


			  </div>
			  <div class="item">
			    <i class="linkify icon"></i>
			    <div class="content">
			      {{ getWeather(event.venue.location["geo:point"]["geo:lat"], event.venue.location["geo:point"]["geo:long"]) }} F
			    </div>
			  </div>
			  <div class="item">
			    <i class="users icon"></i>
			    <div class="content">
			    	<button class="ui small button" style="padding: 6px; margin-right: 4px; margin-bottom: 5px; background-color: rgba(235, 139, 125, 0.16);" ng-repeat="person in event.artists.artist | limitTo: 10;">
			    	  {{ person }}
			    	</button>
			      
			    </div>
			  </div>
			  <div class="item">
			    <i class="linkify icon"></i>
			    <div class="content">
			      <a href="{{ event.website }}">{{ event.website }}</a>
			    </div>
			  </div>
			</div>
		</div>
