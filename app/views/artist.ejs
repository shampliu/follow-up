			      <div class="header">Nirvana</div>
	<!-- 			      <div class="meta">
			        <p>{{ person.name }}</p>
			      </div> -->
			      <div class="description">
			        2013: <b>7 tracks</b>
			      </div>
			    </div>
		  </div>	  	  
		</div>
